---
import Layout from "../layouts/Layout.astro";
import CardPressure from "../components/CardPressure.astro";

const date = new Date().toLocaleString();
---

<Layout>
  <div>
    <h2 class="text-blue-800 font-bold mt-3">¿Cómo te sientes hoy?</h2>
    <small class="text-[10px]">{date}</small>
  </div>
  <div>
    <button
      class="mt-4 px-8 py-3 border rounded-xl text-white bg-blue-800 font-bold w-max"
      ><a href="/registry">Registrar presion arterial</a></button
    >
  </div>
  <h3 class="underline text-xs text-gray-600 mt-8 pb-2">Últimos datos:</h3>
  <div class="overflow-y-scroll scrollbar-hide">
    <CardPressure />
    <CardPressure />
    <CardPressure />
  </div>
</Layout>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* For IE, Edge and Firefox */
  .scrollbar-hide {
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
  }
</style>
